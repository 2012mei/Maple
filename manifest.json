{
  "manifest_version": 3,
  "name": "Maple Bookmarks",
  "description": "Let you navigate smoothly while hiding the bookmark bar.",
  "version": "1.2",
  "action": {
    "default_popup": "src/popup.html"
  },
  "chrome_url_overrides": {
    "newtab": "src/newtab.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+E"
      }
    }
  },
  "optional_host_permissions": [
    "*://*/*"
  ],
  "permissions": [
    "bookmarks",
    "favicon"
  ],
  "icons": {
    "16": "src/logo.png",
    "48": "src/logo.png",
    "128": "src/logo.png"
  }
}
